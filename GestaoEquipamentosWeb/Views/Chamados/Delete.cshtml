@model GestaoEquipamentosWeb.Domain.Entities.Chamado

@{
    ViewData["Title"] = "Excluir Chamado";
}

<h2 class="text-white mt-4">@ViewData["Title"]</h2>

<h4 class="text-white mt-3">Tem certeza que deseja excluir este chamado?</h4>

<dl class="row text-white">
    <dt class="col-sm-2">Título</dt>
    <dd class="col-sm-10">@Model.Titulo</dd>

    <dt class="col-sm-2">Descrição</dt>
    <dd class="col-sm-10">@Model.Descricao</dd>

    <dt class="col-sm-2">Data de Abertura</dt>
    <dd class="col-sm-10">@Model.DataAbertura.ToShortDateString()</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
