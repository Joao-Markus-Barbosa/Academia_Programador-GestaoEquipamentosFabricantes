@model IEnumerable<GestaoEquipamentosWeb.Domain.Entities.Chamado>

@{
    ViewData["Title"] = "Chamados";
}

<h2 class="text-white mt-4">Chamados de Manutenção</h2>

<a asp-action="Create" class="btn btn-success mt-3 mb-3">Novo Chamado</a>

<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>Título</th>
            <th>Descrição</th>
            <th>Data de Abertura</th>
            <th>Dias em Aberto</th>
            <th>Equipamento</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var chamado in Model)
        {
            <tr>
                <td>@chamado.Titulo</td>
                <td>@chamado.Descricao</td>
                <td>@chamado.DataAbertura.ToShortDateString()</td>
                <td>@(DateTime.Now.Subtract(chamado.DataAbertura).Days)</td>
                <td>@chamado.Equipamento?.Nome</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@chamado.Id" class="btn btn-warning btn-sm me-2">Editar</a>
                    <a asp-action="Delete" asp-route-id="@chamado.Id" class="btn btn-danger btn-sm">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

