@model GestaoEquipamentosWeb.Domain.Entities.Equipamento

@{
    ViewData["Title"] = "Excluir Equipamento";
}

<h2 class="text-white mt-4">@ViewData["Title"]</h2>

<h4 class="text-white mt-3">Tem certeza que deseja excluir este equipamento?</h4>
<hr class="bg-light" />

<dl class="row text-white">
    <dt class="col-sm-2">Nome</dt>
    <dd class="col-sm-10">@Model.Nome</dd>

    <dt class="col-sm-2">Número de Série</dt>
    <dd class="col-sm-10">@Model.NumeroSerie</dd>

    <dt class="col-sm-2">Data de Aquisição</dt>
    <dd class="col-sm-10">@Model.DataAquisicao.ToShortDateString()</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>


