@model IEnumerable<GestaoEquipamentosWeb.Domain.Entities.Fabricante>

@{
    ViewData["Title"] = "Lista de Fabricantes";
}

<h2 class="text-white mt-4">Lista de Fabricantes</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Cadastrar Novo Fabricante</a>
</p>

<table class="table table-dark table-striped mt-3">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Email</th>
            <th>Telefone</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var fabricante in Model)
        {
            <tr>
                <td>@fabricante.Nome</td>
                <td>@fabricante.Email</td>
                <td>@fabricante.Telefone</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@fabricante.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@fabricante.Id" class="btn btn-sm btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>




