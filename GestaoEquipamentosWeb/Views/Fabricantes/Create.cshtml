@model GestaoEquipamentosWeb.Domain.Entities.Fabricante

@{
    ViewData["Title"] = "Cadastrar Fabricante";
}

<h2 class="text-white mt-4">Cadastrar Fabricante</h2>

<form asp-action="Create" method="post" class="mt-4">
    <div class="form-group mb-3">
        <label asp-for="Nome" class="control-label text-white"></label>
        <input asp-for="Nome" class="form-control bg-dark text-white border border-purple" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Email" class="control-label text-white"></label>
        <input asp-for="Email" class="form-control bg-dark text-white border border-purple" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label asp-for="Telefone" class="control-label text-white"></label>
        <input asp-for="Telefone" class="form-control bg-dark text-white border border-purple" />
        <span asp-validation-for="Telefone" class="text-danger"></span>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-success">Cadastrar</button>
        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
    </div>
</form>



